<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".cp.CpFragment"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_marginLeft="5dp"
        android:background="@drawable/item_radius3"
        android:layout_width="230dp"
        android:layout_height="255dp"
        android:orientation="vertical">

    <ImageView
        android:scaleType="fitXY"
        android:layout_marginTop="2dp"
        android:src="@drawable/cp1"
        android:layout_width="230dp"
        android:layout_height="130dp"/>

        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <TextView
            android:textColor="#000"
            android:textSize="14dp"
            android:text="피굽남피자6호점"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:textColor="#FB9546"
            android:layout_marginLeft="5dp"
            android:text="2.5km"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        </LinearLayout>
        <TextView
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="#000"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:text="첫 방문 30%할인"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_marginTop="15dp"
            android:layout_gravity="center"
            android:scaleType="fitXY"
            android:src="@drawable/cp"
            android:layout_width="200dp"
            android:layout_height="38dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:background="@drawable/item_radius4"
        android:orientation="horizontal"
        android:layout_width="220dp"
        android:layout_height="45dp">

        <TextView
            android:layout_marginTop="7dp"
            android:textColor="#000"
            android:textStyle="bold"
            android:textSize="13dp"
            android:text="레닌그라드"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_gravity="center"
            android:textColor="#111"
            android:textSize="12dp"
            android:layout_marginLeft="3dp"
            android:text="가게가 깔끔하고 관리가 만족스러웠어요.."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    </LinearLayout>
    <View
        android:layout_marginTop="13dp"
        android:background="#C5C1C1"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <TextView
        android:textColor="#000"
        android:textSize="17dp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:text="쿠폰 더보기 >"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <View
        android:layout_marginTop="10dp"
        android:background="#C5C1C1"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
</LinearLayout>