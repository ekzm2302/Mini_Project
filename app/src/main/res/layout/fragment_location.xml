<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home.homeFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:padding="15dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_loc_dong"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:textSize="15dp"
            android:textColor="#111"
            android:text="양산동 ▼"
            android:backgroundTint="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <RelativeLayout
            android:gravity="right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerInParent="true"
                android:layout_toRightOf="@id/header2"
                android:src="@drawable/header3" />

            <ImageView
                android:id="@+id/header2"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerInParent="true"
                android:layout_marginRight="5dp"
                android:layout_toRightOf="@id/search"
                android:src="@drawable/ic_menu" />

            <ImageView
                android:id="@+id/search"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerInParent="true"
                android:layout_marginRight="5dp"
                android:src="@drawable/ic_search" />
        </RelativeLayout>
    </LinearLayout>
    <View
        android:background="#C5C1C1"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <LinearLayout
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_marginLeft="10dp"
            android:src="@drawable/loc1"
            android:layout_width="45dp"
            android:layout_height="45dp"/>
        <ImageView
            android:layout_marginLeft="55dp"
            android:src="@drawable/loc2"
            android:layout_width="45dp"
            android:layout_height="45dp"/>
        <ImageView
            android:layout_marginLeft="55dp"
            android:src="@drawable/loc3"
            android:layout_width="45dp"
            android:layout_height="45dp"/>
        <ImageView
            android:layout_marginTop="3dp"
            android:layout_marginLeft="55dp"
            android:src="@drawable/loc4"
            android:layout_width="45dp"
            android:layout_height="45dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="-11dp"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginTop="2dp"
            android:textStyle="bold"
            android:layout_marginLeft="28dp"
            android:text="알바"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginTop="3dp"
            android:textStyle="bold"
            android:layout_marginLeft="48dp"
            android:text="중고차 직거래"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginTop="3dp"
            android:textStyle="bold"
            android:layout_marginLeft="22dp"
            android:text="부동산 직거래"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginTop="3dp"
            android:textStyle="bold"
            android:layout_marginLeft="30dp"
            android:text="당근미니"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>


    <LinearLayout
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_marginLeft="10dp"
            android:src="@drawable/loc5"
            android:layout_width="45dp"
            android:layout_height="45dp"/>
        <ImageView
            android:layout_marginLeft="53dp"
            android:src="@drawable/loc6"
            android:layout_width="45dp"
            android:layout_height="45dp"/>
        <ImageView
            android:layout_marginLeft="57dp"
            android:src="@drawable/loc7"
            android:layout_width="45dp"
            android:layout_height="45dp"/>
        <ImageView
            android:layout_marginTop="3dp"
            android:layout_marginLeft="57dp"
            android:src="@drawable/loc8"
            android:layout_width="45dp"
            android:layout_height="45dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="-11dp"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginTop="2dp"
            android:textStyle="bold"
            android:layout_marginLeft="18dp"
            android:text="농수산물"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginTop="3dp"
            android:textStyle="bold"
            android:layout_marginLeft="48dp"
            android:text="당근지도"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginTop="3dp"
            android:textStyle="bold"
            android:layout_marginLeft="55dp"
            android:text="쿠폰북"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginTop="3dp"
            android:textStyle="bold"
            android:layout_marginLeft="48dp"
            android:text="과외/클래스"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <View
        android:layout_marginTop="20dp"
        android:background="#E8E4E4"
        android:layout_width="match_parent"
        android:layout_height="5dp"/>

    <LinearLayout
        android:padding="10dp"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="5dp"
            android:textColor="#000"
            android:textSize="18dp"
            android:textStyle="bold"
            android:text="걸어서 갈 수 있는 우리동네 알바"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textSize="15dp"
            android:layout_marginTop="8dp"
            android:text="짱구는못말려님 근처에서 할 수 있는 알바를 모았어요."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recv_job"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>



    <View
        android:layout_marginTop="7dp"
        android:background="#E8E4E4"
        android:layout_width="match_parent"
        android:layout_height="5dp"/>

    <LinearLayout
        android:padding="10dp"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="#000"
            android:textSize="19dp"
            android:textStyle="bold"
            android:text="이웃들의 추천가게"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recv_shop"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <View
        android:layout_marginTop="20dp"
        android:background="#E8E4E4"
        android:layout_width="match_parent"
        android:layout_height="5dp"/>

    <LinearLayout
        android:padding="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:layout_weight="1"
            android:textColor="#000"
            android:textSize="18dp"
            android:textStyle="bold"
            android:text="우리동네 인기쿠폰"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

            <TextView
                android:textSize="16dp"
                android:textStyle="bold"
                android:outlineAmbientShadowColor="#000"
                android:textColor="#000"
                android:text="받은 쿠폰 보기 >"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recv_cp"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>



    <TextView
        android:id="@+id/tv_cp_cp"
        android:textColor="#000"
        android:textSize="17dp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:text="쿠폰 더보기 >"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <View
        android:layout_marginTop="10dp"
        android:background="#C5C1C1"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <View
        android:layout_marginTop="20dp"
        android:background="#E8E4E4"
        android:layout_width="match_parent"
        android:layout_height="5dp"/>



    <LinearLayout
        android:padding="10dp"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="#000"
            android:textSize="19dp"
            android:textStyle="bold"
            android:text="이런 상품은 어떠세요?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textSize="15dp"
            android:layout_marginTop="8dp"
            android:text="짱구는못말려님이 봤던 상품을 바탕으로 제안해요."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recv_item"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <View
        android:layout_marginTop="20dp"
        android:background="#E8E4E4"
        android:layout_width="match_parent"
        android:layout_height="5dp"/>

    <LinearLayout
        android:padding="10dp"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="#000"
            android:textSize="19dp"
            android:textStyle="bold"
            android:text="나의 당근 이야기"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recv_story"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>

    </ScrollView>

    <ImageView

        android:layout_marginRight="10dp"
        android:layout_gravity="right"
        android:layout_marginTop="668dp"
        android:backgroundTint="#00FFFFFF"
        android:id="@+id/home_ic_add"
        android:src="@drawable/ic_add2"
        android:layout_width="50dp"
        android:layout_height="50dp"/>






</FrameLayout>